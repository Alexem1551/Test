<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Height="450">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="ListViewMain" d:ItemsSource="{d:SampleData}" Margin="115,64,115,64" Grid.ColumnSpan="2" >
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding rank_}"  Width="50px" >#</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding name_}" Width="100px" >Coin</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding symbol_}" Width="70px" >#</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding priceUsd_}" Width="150px" >Price</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding changePercent24Hr_}" Width="150px" >24hr change</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
